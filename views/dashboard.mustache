<html>
    <head>
        <!-- CSS only -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="dashstyle.css">

    </head>
    <body>
        
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <h1>Dashboard</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        Stats
                        </div>
                        <div class="card-body">
                        <table class="table table-dark">
                            <tr>
                                <td>Total Stocks</td>
                                <td>Total Brands</td>
                            </tr>
                            <tr>
                                {{#n1}} <td>{{sum}}</td> {{/n1}}
                                {{#n2}} <td>{{count}}</td> {{/n2}}
                            </tr>
                        </table>
                        </div>
                    </div>
                </div>

            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                        Stats
                        </div>
                        <div class="card-body">
                        <a class="btn btn-primary" href="/meds">Edit Medicine</a>
                        <a class="btn btn-primary" href="/add">Add Medicine</a>
                        <a class="btn btn-primary" href="/meds">Delete Medicine</a>
                        <a class="btn btn-primary" href="">Add Medicine</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>

        <!-- Code to display meds and brand on dashboard
        {{#n1}} <h1> {{sum}} </h1> {{/n1}}
        {{#n2}} <h1> {{count}} </h1> {{/n2}} -->

    </body>
</html>